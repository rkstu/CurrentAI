{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "build": {
    "env": {
      "PYTHONUNBUFFERED": "1"
    }
  },
  "scripts": {
    "build": "pip install -r requirements.txt",
    "start": "streamlit run app.py --server.port $PORT --server.headless true"
  }
}